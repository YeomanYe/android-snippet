<resources>
    <style name="AppTheme" parent="AppTheme.Base"/>

    <style name="AppTheme.Base" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/colorPrimary</item><!--设置ActionBar颜色-->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item><!--设置状态栏颜色-->

        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <!-- Customize your theme here. -->
        <item name="colorControlHighlight">@color/black_translucent</item><!--设置波纹颜色-->
    </style>


    <style name="AlertDialog" parent="@android:style/Theme.DeviceDefault.Dialog">
        <!-- 这里设置背景为透明，为了隐藏边框 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <!-- 这里是修改顶部标题背景颜色，具体颜色自己定，可以是图片 -->
        <!--<item name="android:topDark">@color/white</item>-->

        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="Toast" parent="@android:style/Theme.DeviceDefault.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.0</item>
    </style>

    <declare-styleable name="ASLoadingView">
        <attr name="loading_view_size" format="dimension"/>
        <attr name="android:color"/>
    </declare-styleable>
    <attr name="ASLoadingStyle" format="reference"/>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>
</resources>
