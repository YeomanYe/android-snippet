<?xml version="1.0" encoding="utf-8"?>

<resources>
    <declare-styleable name="FloatingActionButton">
        <attr name="fab_colorPressed" format="color" />
        <attr name="fab_colorNormal" format="color" />
        <attr name="fab_colorRipple" format="color" />
        <attr name="fab_shadow" format="boolean" />
    </declare-styleable>
    <!-- tabbar -->
    <attr name="tab_bar_defStyle" format="reference"/>
    <declare-styleable name="ASTabBar">
        <attr name="tab_item_padding" format="dimension"/>
        <attr name="tab_item_padding_top" format="dimension"/>
        <attr name="tab_item_padding_bottom" format="dimension"/>
        <attr name="tab_item_padding_left" format="dimension"/>
        <attr name="tab_item_padding_right" format="dimension"/>
        <attr name="tab_item_padding_horizontal" format="dimension"/>
        <attr name="tab_item_padding_vertical" format="dimension"/>
        <attr name="tab_offset" format="dimension"/>
        <attr name="tab_text_size" format="integer"/>
        <attr name="tab_text_color" format="color"/>
    </declare-styleable>
    <!-- tabbar -->

    <!-- tabpage -->
    <attr name="tab_page_defStyle" format="reference"/>
    <declare-styleable name="ASTabPage">
        <attr name="tab_bar_background" format="color"/>
        <attr name="tab_bar_direction" format="enum">
            <enum name="top" value="0"/>
            <enum name="bottom" value="1"/>
        </attr>
    </declare-styleable>
    <!-- tabpage-->

    <!-- tabstrip -->
    <attr name="tab_strip_defStyle" format="reference"/>
    <declare-styleable name="ASTabStrip">
        <attr name="tab_strip_indicator" format="boolean"/>
        <attr name="tab_strip_type" format="enum">
            <enum name="fixed" value="0"/>
            <enum name="scrollable" value="1"/>
        </attr>
        <attr name="tab_strip_indicator_color" format="color"/>
    </declare-styleable>
    <!-- tabstrip -->

    <!-- section page -->
    <attr name="list_page_defStyle" format="reference"/>
    <declare-styleable name="ASSectionListPage">
    </declare-styleable>
    <!-- section page -->

    <!-- section -->
    <attr name="list_defStyle" format="reference"/>
    <declare-styleable name="ASSection">
    </declare-styleable>
    <!-- section -->

    <!-- section item-->
    <attr name="list_item_defStyle" format="reference"/>
    <declare-styleable name="ASSectionItem">
    </declare-styleable>
    <!-- section item-->
</resources>